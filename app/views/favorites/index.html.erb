                        <span style="color: red; margin: 10px;"><%= b.bsound.b_part %></span>
                        <div><%= audio_tag(b.bsound.b_sound, :autoplay => false, :controls => true) %></div>
                    </div>

                    <% end %>
                </div>

            <% end %>

        </div>
    </div>



