<body class="body1">

<div class="col-lg-6">

    <div class="category-left">
        <div onclick="obj=document.getElementById('menu1').style; obj.display=(obj.display=='none')?'block':'none';">
            <a style="cursor:pointer;" class="g-cate">guitar favorite ▶︎ </a>
　　　　　</div>
    </div>



    <div class="category-left">
        <div onclick="obj=document.getElementById('menu2').style; obj.display=(obj.display=='none')?'block':'none';">
            <a style="cursor:pointer;" class="b-cate">Bass favorite ▶︎ </a>
　　　　　</div>
    </div>


    <div class="category-left">
        <div onclick="obj=document.getElementById('menu3').style; obj.display=(obj.display=='none')?'block':'none';">
            <a style="cursor:pointer;" class="p-cate">piano favorite ▶︎ </a>
　　　　　</div>
    </div>

    <div class="category-left a-cate">
        <div onclick="obj=document.getElementById('menu4').style; obj.display=(obj.display=='none')?'block':'none';">
            <a style="cursor:pointer;" class="a-cate">another favorite ▶︎ </a>
　　　　　</div>
    </div>
</div>








<div class="col-lg-6">
    <div class="category-right">
        <div id="menu1" style="display:none;clear:both;">

            <% if @favorites.present? %>
                <div class="g-cate">
                    <h2>guitar favorite</h2>
                    <% @favorites.each do |f| %>
                    <div style=" margin: 30px 0; font-size: 19px;">
                        <div><%= f.gsound.g_body %></div>
                        <span style="color: red; margin: 10px;"><%= f.gsound.g_bpm %></span>
                        <span style="color:red; margin: 10px;"><%= f.gsound.g_key %></span>
                        <span style="color: red; margin: 10px;"><%= f.gsound.g_part %></span>
                        <div><%= audio_tag(f.gsound.g_sound, :autoplay => false, :controls => true) %></div>
                    </div>

                    <% end %>
                </div>

            <% end %>

        </div>
    </div>

    <div class="category-right">
        <div id="menu2" style="display:none;clear:both;">

            <% if @bfavorites.present? %>
