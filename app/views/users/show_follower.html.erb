<body class="body1">
<div class="fol_index_header">
  <p><b>フォロワー一覧</b></p>
</div>

<div class="fol_index">

  <div class="fol_index_head clearfix">
    <div class="fol_index_h_image"></div>
    <div class="fol_index_h_nick">
      <b>NAME</b>
    </div>
    <div class="fol_index_h_prof">
      <b>introduction</b>
    </div>
  </div>
  <% @user.followers.each do |user| %>

    <div class="fol_index_body clearfix">

      <div class="fol_index_b_image">
      </div>
      <div class="fol_index_b_nick">
        <%= link_to user_path(user) do %>
          <%= user.user_name %>
        <% end %>
      </div>
      <div class="fol_index_b_prof">
        <%= truncate(user.profile, length: 25, omission: " ....") %>
        </div>

    </div>

  <% end %>

  <div>
   
  </div>
  <div class="fol_submit">
    <%= link_to 'back', user_path(current_user.id) %>
  </div>

</div>




</body>
