<div class="text-center">
<h1>編集画面</h1>
<%= form_for(@user) do |f| %>
    <%= attachment_image_tag @user, :user_image, size: '100x100', fallback: "no_image.jpg",class: "img-circle" %>
    <%= f.attachment_field :user_image, class: "a" %>
    <h4>名前</h4>
    <%= f.text_field :user_name %>
    <h4>本文</h4>
    <%= f.text_area :profile %>
    <br>
    <%= f.submit '更新' %>
<% end %>
</div>