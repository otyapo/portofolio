<body class="body1">
    <div class="text-center">
        <h1 style="color: white;">EDIT PAGE</h1>
        <%= form_for(@user) do |f| %>
            <%= attachment_image_tag @user, :user_image, size: '100x100', fallback: "no_image.jpg",class: "img-circle" %>
            <%= f.attachment_field :user_image, class: "attachment1" %>
        <div class="edit-body">
            <h4 style="color: white;">Name</h4>
                <%= f.text_field :user_name %>
            <h4 style="color: white; padding-top: 30px;">Introduction</h4>
            <p style="color: red;">(Please input 150 characters or less.)</p>
                <%= f.text_area :profile, style: "font-size: 30px;" %>
        </div>
        <br>
            <%= f.submit 'Update' %>
        <% end %>
    </div>
